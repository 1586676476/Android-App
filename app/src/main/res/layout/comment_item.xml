<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border">
    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/label_commentdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="--this date"
        android:textSize="20dp"
        android:textColor="@color/color_tab_2"
        />
    <TextView
        android:id="@+id/label_commentposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="--this position"
        android:textSize="20dp"
        android:textColor="@color/color_tab_2"
        />
    <TextView
        android:id="@+id/label_commentcontent"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="80dp"
        android:text="--this content:"
        android:textSize="20dp"
        />

</LinearLayout>
