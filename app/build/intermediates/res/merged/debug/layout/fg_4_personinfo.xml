<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_head_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/label_personname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="未登录"
            android:textSize="16sp"/>

    </LinearLayout>


        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/label_accountinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/zhnaghu"
            leon:leftText="个人信息"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"
            leon:rightTextSize="14sp"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/replace_personinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/changeinfo"
            leon:leftText="修改信息"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"
            leon:rightTextSize="14sp"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/label_comment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/mycomment"
            leon:leftText="我的点评"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/label_strategy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/mystrategy"
            leon:leftText="我的攻略"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/icon_to_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/mycollection"
            leon:leftText="我的收藏"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/icon_to_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/myphoto"
            leon:leftText="我的照片"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/icon_to_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/iconfont"
            leon:leftText="我的足迹"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/icon_to_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/personalinfo"
            leon:leftText="我的驴友"
            leon:rightText="查看更多"
            leon:rightTextColor="@color/colorPrimary"/>

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/btn_exit_Logged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:isShowRightText="true"
            leon:leftIcon="@drawable/exit"
            leon:leftText="退出登录"
            leon:rightText=""
            leon:rightTextColor="@color/colorPrimary"/>

    </LinearLayout>
</ScrollView>